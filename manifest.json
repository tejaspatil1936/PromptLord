{
  "manifest_version": 3,
  "name": "PromptLord - AI Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your AI prompts with a single click.",
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://grok.com/*"
      ],
      "js": [
        "src/config.js",
        "src/content/index.js"
      ],
      "css": [
        "src/styles/main.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}